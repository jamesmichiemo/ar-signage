%a-scene
  %a-assets
    %img{:id => "texture", :src => asset_path("eightMana.png")}
  %a-box{:position => "0 1 -3", 
    :rotation => "0 45 0", 
    :color => "000",
    :height => "1",
    :width => "1",
    :depth => "1",
    :src => "#texture"}
    %a-animation{:attribute => "rotation", :end => "click", :repeat => "indefinite", :to => "180 225 180"}
  %a-sky{:color => "#ECECEC"}
  %a-camera{:position => "0 1 0"}
    %a-cursor{:color => "#FF0000"}

  %a-light(type="spot" 
    color="#FF0000"
    position="-10 0 0"
    look-at="a-box")

  %a-light(type="point" 
    color="#00FF00"
    position="0 5 0"
    look-at="a-box")

  %a-sky{:src => asset_path("sky.jpg")}
